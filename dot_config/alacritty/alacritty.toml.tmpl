[general]
import = ["~/.config/alacritty/themes/auto.toml"]

[font]
size = 
{{- if eq .metadata.profile "Desktop" }} 16{{- end }}
{{- if eq .metadata.profile "Laptop" }} 12{{- end }}

[font.normal]
family = "Monofur Nerd Font Mono"
style = "Regular"

[font.bold]
family = "Monofur Nerd Font Mono"
style = "Bold"

[font.italic]
family = "Monofur Nerd Font Mono"
style = "Italic"

[window]
dynamic_padding = true

[window.padding]
x = 
{{- if eq .metadata.profile "Desktop" }} 16{{- end }}
{{- if eq .metadata.profile "Laptop" }} 8{{- end }}
y = 
{{- if eq .metadata.profile "Desktop" }} 16{{- end }}
{{- if eq .metadata.profile "Laptop" }} 8{{- end }}
